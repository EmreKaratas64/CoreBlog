@model AdminEditViewModel

@{
    ViewData["Title"] = "Admin Ayarlar";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}



<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Admin Ayarları</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <form method="post" asp-action="Setting" enctype="multipart/form-data">
                <input type="hidden" asp-for="@Model.ID" />
                <div class="form-group row mb-4 mt-4">
                    <label class="col-lg-2 col-form-label">Ad Soyad</label>

                    <div class="col-lg-10">
                        <input type="text" asp-for="@Model.nameSurname" placeholder="Ad soyad" class="form-control">
                        <span class="text-danger" asp-validation-for="@Model.nameSurname"></span>
                    </div>
                </div>
                <div class="form-group row mb-4">
                    <label class="col-lg-2 col-form-label">Fotoğraf</label>
                    <input type="file" asp-for="@Model.Image" class="file-upload-default d-none">
                    <div class="input-group col-lg-10">
                        <input type="text" asp-for="@Model.Image" class="form-control file-upload-info" disabled placeholder="Fotoğraf seç">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-success" type="button"><i class="fa fa-upload"></i>&nbsp;&nbsp; Yükle</button>
                        </span>
                    </div>

                </div>
                <div class="form-group row mb-4">
                    <label class="col-lg-2 col-form-label">Şifre</label>

                    <div class="col-lg-10">
                        <input type="password" asp-for="@Model.password" placeholder="Şifre" class="form-control">
                    </div>
                </div>
                <div class="form-group row mb-4">
                    <label class="col-lg-2 col-form-label">Şifre Tekrar</label>

                    <div class="col-lg-10">
                        <input type="password" asp-for="@Model.passwordConfirm" placeholder="Şifre tekrar" class="form-control">
                        <span class="text-danger" asp-validation-for="@Model.passwordConfirm"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-offset-2 col-lg-10">
                        <div class="i-checks">
                            <label>
                                <input type="checkbox" asp-for="@Model.passwordChange"><i></i> Şifremi değiştirmek istiyorum
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button class="btn btn-outline btn-warning btn-rounded" type="submit"><i class="fa fa-upload"></i>&nbsp;&nbsp;Kaydet</button>
                        <a href="/Admin/Widget/MainPage/" class="btn btn-outline btn-dark btn-rounded px-3"><i class="fa fa-exclamation-circle"></i>&nbsp;&nbsp;İptal</a>
                    </div>
                </div>

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            </form>
        </div>
    </div>
</div>

