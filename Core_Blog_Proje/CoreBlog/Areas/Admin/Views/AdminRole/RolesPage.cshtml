@using EntityLayer.Concrete
@model List<AppRole>

@{
    ViewData["Title"] = "Roller";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
    string role_state = "";
    string role_state_color = "btn-warning";
}

<link href="~/inspinia-gh-pages/css/AdminStyle.css" rel="stylesheet">

@if (TempData["RoleAddSuccess"] != null)
{
    <div class="alert alert-success alert-dismissable">
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button" onclick="refreash()">×</button>
        @TempData["RoleAddSuccess"]
    </div>
}

@if (TempData["RolePassiveSuccess"] != null)
{
    <div class="alert alert-danger alert-dismissable">
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button" onclick="refreash()">×</button>
        @TempData["RolePassiveSuccess"]
    </div>
}

@if (TempData["RoleActiveSuccess"] != null)
{
    <div class="alert alert-success alert-dismissable">
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button" onclick="refreash()">×</button>
        @TempData["RoleActiveSuccess"]
    </div>
}



<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Roller </h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Rol Adı</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.Id</th>
                                <td>@item.Name</td>
                                @if (item.RoleStatus == true)
                                {
                                    role_state = "Aktif";
                                    role_state_color = "btn-info";
                                }
                                else
                                {
                                    role_state = "Pasif";
                                    role_state_color = "btn-danger";
                                }
                                <td>
                                    <a href="/Admin/AdminRole/ChangeRoleStatus/@item.Id" class="btn btn-outline @role_state_color btn-rounded"><i class="fa fa-check"></i>&nbsp;&nbsp; @role_state </a>
                                </td>
                               
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <a href="/Admin/AdminRole/AddRole/" class="btn btn-outline btn-success btn-rounded"><i class="fa fa-paste"></i>&nbsp;&nbsp;Yeni Rol Ekle</a>
        </div>
    </div>
</div>

