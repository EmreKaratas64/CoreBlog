@using EntityLayer.Concrete
@model List<AppUser>

@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
    string status = "";
    string btncol = "";
}

<link href="~/inspinia-gh-pages/css/AdminStyle.css" rel="stylesheet">

@if (TempData["PasifBasari"] != null)
{
    <div class="alert alert-danger alert-dismissable">
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button" onclick="refreash()">×</button>
        @TempData["PasifBasari"]
    </div>
}

@if (TempData["AktifBasari"] != null)
{
    <div class="alert alert-success alert-dismissable">
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button" onclick="refreash()">×</button>
        @TempData["AktifBasari"]
    </div>
}

<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Kategoriler </h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Kullancı Adı</th>
                            <th>Email</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.Id</th>
                                <td>@item.NameSurname</td>
                                <td>@item.UserName</td>
                                <td>@item.Email</td>
                                @if (item.Status == true)
                                {
                                    status = "Aktif";
                                    btncol = "btn-primary";
                                }

                                else
                                {
                                    status = "Pasif";
                                    btncol = "btn-danger";
                                }
                                <td> <a href="/Admin/User/ChangeUserStatus/@item.Id" class="btn btn-outline @btncol btn-rounded"><i class="fa fa-warning"></i>&nbsp;&nbsp; @status </a> </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


