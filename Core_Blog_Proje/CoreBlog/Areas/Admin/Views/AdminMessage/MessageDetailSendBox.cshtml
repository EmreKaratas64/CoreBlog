@model EntityLayer.Concrete.Message

@{
    ViewData["Title"] = "Giden Mesaj Detayı";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}


<div class="row">

    @await Component.InvokeAsync("AdminMessageCategoryRapidAccess")

    <div class="col-lg-9 animated fadeInRight">
        <div class="mail-box-header">
            <h2>
                Giden Mesaj Detayları
            </h2>
            <div class="mail-tools tooltip-demo m-t-md">
                <h3>
                    <span class="font-normal">Subject: </span>@Model.Subject
                </h3>
                <h5>
                    <span class="float-right font-normal">@DateTime.Parse(Model.MessageDate.ToString()).ToString("dd-MMM-yyyy")</span>
                    <span class="font-normal">Alıcı: </span>@ViewBag.receiverrmail
                </h5>
            </div>
        </div>
        <div class="mail-box">
            <div class="mail-body">
                <p>
                    @Model.MessageDetails
                </p>
            </div>
            <div class="mail-body text-right tooltip-demo">

                <a href="/Admin/AdminMessage/DeleteSendBoxMessage/@Model.MessageID" title="Mesajı sil" onclick="return confirm('Bu mesajı silmek istediğinizden emin misiniz?')" class="btn btn-sm btn-white"><i class="fa fa-trash-o"></i> Sil</a>
            </div>
            <div class="clearfix"></div>


        </div>


    </div>

</div>

