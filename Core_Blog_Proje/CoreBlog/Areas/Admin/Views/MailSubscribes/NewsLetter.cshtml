@using EntityLayer.Concrete
@model List<MailSubscribe>
@{
    ViewData["Title"] = "Mail Bülteni Abonelikleri";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
    string status = "";
    string bg_col = "";
}

<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Mail Bülteni Abonelikleri </h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Mail</th>
                            <th>Durumu</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.MailID</th>
                                <td>@item.Mail</td>
                                @if (item.MailStatus == true)
                                {
                                    status = "Onaylanmış";
                                    bg_col = "bg-info";

                                }
                                else
                                {
                                    status = "Onaylanmamış";
                                    bg_col = "bg-warning";
                                }
                                <td><label class="@bg_col px-2 py-2 rounded">@status</label></td>


                                <td class="text-navy">
                                    <a href="/Admin/MailSubscribes/DeleteSubscribe/@item.MailID" class="btn btn-outline btn-danger btn-rounded" onclick="return confirm('Abonelik silme işleminin geri dönüşü yoktur. Yine de bu aboneliği silmek istediğinizden emin misiniz?')"><i class="fa fa-warning"></i>&nbsp;&nbsp; Sil</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

