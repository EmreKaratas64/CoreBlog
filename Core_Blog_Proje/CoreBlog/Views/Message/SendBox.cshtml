@using EntityLayer.Concrete
@model List<Message>

@{
    ViewData["Title"] = "Yazar Giden Kutusu";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<script>

    function my_func(id) {
        window.open("/Message/MessageDetails/" + id);
    };

</script>


<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Giden Mesajlar</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Alıcı </th>
                                <th> Konu </th>
                                <th> Tarih </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="/ProfileImages/@item.ReceiverUser.ImageUrl" class="mr-2" alt="image">
                                    </td>
                                    <td> @item.ReceiverUser.NameSurname </td>
                                    <td>
                                        <label class="badge badge-gradient-info" style="font-size:12px">@item.Subject</label>
                                    </td>
                                    <td> @DateTime.Parse(item.MessageDate.ToString()).ToString("dd-MMM-yyyy") </td>

                                 
                                    <td>
                                        <button class="btn btn-gradient-dark btn-rounded btn-icon" onclick="my_func(@item.MessageID)">
                                            <i class="mdi mdi-email-open"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>