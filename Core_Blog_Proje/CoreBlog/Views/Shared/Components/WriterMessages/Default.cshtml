@using EntityLayer.Concrete
@model List<Message>

@{ 
    int mesaj_sayi = 0;
}

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Mesajlar</h6>
    @foreach (var item in Model)
    {
        <div class="dropdown-divider"></div>
        <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <img src="/ProfileImages/@item.SenderUser.ImageUrl" alt="image" class="profile-pic">
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.SenderUser.NameSurname mesaj gönderdi</h6>
                <p class="text-gray mb-0"> @item.MessageDate.ToShortDateString() </p>
            </div>
        </a>

        if(item.MessageDate == DateTime.Today)
        {
            mesaj_sayi++;
        }

    }
    <h6 class="p-3 mb-0 text-center">@mesaj_sayi yeni mesaj</h6>
</div>