@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "Bloglarım";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Blog Listesi</h4>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Kategori</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.BlogID</th>
                                <td>@item.BlogTitle</td>
                                <td><label class="badge badge-gradient-info" style="font-size:14px">@item.Category.CategoryName</label></td>
                                <td>@DateTime.Parse(item.BlogCreateDate.ToString()).ToString("dd-MMM-yyyy")</td>
                                <td><a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-outline-danger" onclick="return confirm('Bu bloğu silmek istediğinizden emin misiniz?')"><i class="mdi mdi-alert btn-icon-prepend"></i>&nbsp; Sil</a></td>
                                <td><a href="/Blog/UpdateBlog/@item.BlogID" class="btn btn-outline-success"><i class="mdi mdi-upload btn-icon-prepend"></i>&nbsp; Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <br />
            <a href="/Blog/AddBlog/" class="btn btn-gradient-info"><i class="mdi mdi-file-check btn-icon-prepend"></i>&nbsp; Blog Ekle</a>
        </div>
    </div>
</div>

