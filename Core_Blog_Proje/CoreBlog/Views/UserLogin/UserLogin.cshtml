@model UserSignUpViewModel

@{
    ViewData["Title"] = "Kullanıcı Girişi";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}


<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">CoreBlog Giriş Paneli</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto col-10">
                <form method="post">
                    <div class="form-group">
                        <label>Kullanıcı Adı</label>
                        <input type="text" class="form-control" placeholder="Kullanıcı adınız" asp-for="@Model.UserName" />
                        <span class="text-danger" asp-validation-for="@Model.UserName"></span>
                    </div>
                    <div class="form-group">
                        <label>Şifre</label>
                        <input type="password" class="form-control" placeholder="Şifre" asp-for="@Model.Password" />
                        <span class="text-danger" asp-validation-for="@Model.Password"></span>
                    </div>

                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input">
                        <label class="form-check-label">Beni hatırla</label>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
                    <p><a href="/UserRegister/UserRegistration/">Bir hesabınız yok mu?</a></p>

                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                </form>
            </div>
        </div>
    </div>
</section>



