@model CoreBlog.Controllers.Employee2

@{
    ViewData["Title"] = "EditEmployee";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="ibox-content">
    <div class="row">
        <div class="col-12 b-r">
            <h3 class="m-t-none m-b mb-4">Çalışan Güncelle</h3>
            <form method="post">
                <div class="form-group mb-3">
                    <input type="hidden" asp-for="ID" class="form-control" required>
                </div>
                <div class="form-group mb-3">
                    <label class="font-bold">Çalışan Adı</label><br />
                    <input type="text" asp-for="Name" placeholder="Çalışan adı" class="form-control" required>
                </div>
                <div>
                    <button class="btn btn-outline btn-warning btn-rounded px-3 mr-2" type="submit"><i class="fa fa-upload"></i>&nbsp;&nbsp; Düzenle </button>
                    <a class="btn btn-outline btn-dark btn-rounded px-3" href="/EmployeeApi/ApiEmployee/"><i class="fa fa-arrow-circle-left"></i>&nbsp;&nbsp; Çalışanlara Git </a>
                </div>
            </form>
        </div>
    </div>
</div>

