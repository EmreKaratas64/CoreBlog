@model WriterLoginViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Yazar Giriş Paneli</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/writer/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/writer/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/writer/assets/css/style.css">
    <!-- End layout styles -->
</head>
<body>

    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo mb-0">
                                <a class="navbar-brand brand-logo" href="/Blog/Bloglar/" style="color: #057fdf;font-weight:bold"><img src="~/writer/assets/images/logo3.svg" alt="logo" style="width:45px" /> Core Blog</a>
                            </div>
                            <h4 class="text-center" style="color: #057fdf">Yazar Giriş Paneline Hoşgeldiniz</h4><br /><br />
                            <form method="post">

                                <div class="form-group">
                                    <input type="text" asp-for="@Model.username" class="form-control form-control-lg" placeholder="Kullanıcı adınız" />
                                    <span asp-validation-for="@Model.username" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input type="password" asp-for="@Model.password" class="form-control form-control-lg" placeholder="Kullanıcı adınız" />
                                    <span asp-validation-for="@Model.password" class="text-danger"></span>
                                </div>

                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-gradient-info btn-lg font-weight-medium auth-form-btn" href="">GİRİŞ YAP</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Bir hesabınız yok mu? <a href="/WriterRegister/RegisterWriter/" class="text-info">Kayıt Ol</a>
                                </div>

                                <div class="text-danger mt-3 mb-3" asp-validation-summary="ModelOnly"></div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/writer/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/writer/assets/js/off-canvas.js"></script>
    <script src="~/writer/assets/js/hoverable-collapse.js"></script>
    <script src="~/writer/assets/js/misc.js"></script>
    <!-- endinject -->
</body>
</html>