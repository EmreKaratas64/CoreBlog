@using EntityLayer.Concrete
@model List<Notification>

@{
    ViewData["Title"] = "Bildirimler";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Tüm Bildirimler</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>İçerik</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.NotificationID</th>

                                <td><label class="@item.NotificationColor text-white p-2" style="font-size:14px;border-radius:6px">@item.NotificationType</label></td>

                                <td>@DateTime.Parse(item.NotificationDate.ToString()).ToString("dd-MMM-yyyy")</td>

                                <td>@item.NotificationDetails</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>